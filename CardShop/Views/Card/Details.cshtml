@model CardInfoViewModel

@{
    ViewBag.Title = "Card Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card col-4" style="width: 20rem; ">
            <h3 class="card-title text-center">@Model.Name</h3>
            <img class="card-img-top" src=@Model.ImageUrl alt="Card Image">
            <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="mb-0"><span class="fw-bold">Game: </span>@Model.Game</p>
            <p class="mb-0"><span class="fw-bold">Price: </span>@Model.Price EUR</p>
            <p class="mb-0"><span class="fw-bold">Owner: </span>@Model.Owner</p>
        </div>

        <a asp-controller="Card" asp-action="Index" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to Catalog</a>
        @if (User.Identity.Name == Model.Owner)
        {
                <a asp-controller="Card" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
        }

    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
